<div class="center jumbotron" background-color: #FFFFFF>

	<p>Upload an Image</p>

	<% if @error_message == 'url' then%>
		<div class="alert alert-danger fade in">
	  	<strong>Error!</strong> "You have to enter a valid url !!"
		</div>
	<% elsif @error_message == 'path' then%>
		<div class="alert alert-danger fade in">
	  	<strong>Error!</strong> "You have to select an image !!"
		</div>
	<% elsif @error_message == 'n_val' then%>
			<div class="alert alert-danger fade in">
				<strong>Error!</strong> "You have to load valid image type !!"
			</div>
	<% end %>

	<%= form_tag({controller: "classifier_request", action: "create"}, multipart: true) do%>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <p> <%= file_field_tag 'upload[file]', class: "form-control" %> </p>
      <p> <%= text_field_tag 'upload[url]', '.. or enter an url here' , class: "form-control", :focus => true, onfocus: "javascript: this.value = \"\"" %> </p> </p>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <%= submit_tag "Upload", class: "btn btn-md btn-warning" %> Max 2 mb.
  </div>

	<% end %>
	<br><br><br><br>
</div>
	        